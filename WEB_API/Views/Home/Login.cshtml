@model WEB_API.Models.TestClass

@{
    ViewBag.Title = "Login";
}
<legend>Login</legend>


<form runat="server" method="post">

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @if (@ViewBag.Message != null)
    {
        <div style="border: 1px solid red"> @ViewBag.Message </div>
    }
    <div class="row mb-3">
        <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control" id="email" name="email" runat="server">
            @Html.ValidationMessageFor(a => a.lname)
        </div>
    </div>
    <div class="row mb-3">
        <label for="inputPassword3" class="col-sm-2 col-form-label">Lastname</label>
        <div class="col-sm-10">
            <input type="password" class="form-control" id="lname" name="lname" runat="server">
            @Html.ValidationMessageFor(a => a.lname)
        </div>
    </div>
    <button type="submit" runat="server" class="btn btn-primary">Sign in</button>
</form>







