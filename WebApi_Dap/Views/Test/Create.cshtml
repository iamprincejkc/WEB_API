<form action="/" id="formcreate" method="post">

    <div class="form-horizontal">
        <h4>TestClass</h4>
        <hr />
        <div class="form-group">
            <label for="fname" name="fname">Firstname</label>
            <div class="col-md-10">
                <input type="text" name="fname" id="fname" class="form-control" />
                @Html.ValidationMessageFor(model => model.fname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Lastname</label>
            <div class="col-md-10">
                <input type="text" name="lname" id="lname" class="form-control" />
                @Html.ValidationMessageFor(model => model.lname, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label>Email</label>
            <div class="col-md-10">
                <input type="text" name="email" id="email" class="form-control" />
                @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" id="submit" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>



@section Scripts {

    <script type="text/javascript">
    $(function () {
        $("#submit").click(function () {
            //alert("");
            var testclass = {};
            testclass.fname = $("#fname").val();
            testclass.lname = $("#lname").val();
            testclass.email = $("#email").val();
            console.log('{testclass: ' + JSON.stringify(testclass) + '}');
            $.ajax({
                type: "POST",
                url: 'Create',
                data: '{testclass: ' + JSON.stringify(testclass) + '}',
                contentType: "application/json; charset=utf-8",
                success: function () {
                    alert("Data has been added successfully.");
                },
                error: function (data) {
                    alert("Error while inserting data");
                }
            });
            return false;
        });
    });
    </script>

}


